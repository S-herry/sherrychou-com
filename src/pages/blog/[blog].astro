---
import BaseLayout from "../../layouts/BaseLayout.vue";
import BlogPost from "../../components/BlogPost.vue";

export function getStaticPaths() {
  const posts = [
    {
      slug: "astro-vue3",
      title: "Astro + Vue3 入門",
      date: "2024-06-01",
      image:
        "https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&w=600&q=80",
      description: "這是一篇介紹如何用 Astro 與 Vue3 打造現代網站的文章。",
      content:
        "Astro 是一個現代靜態網站生成器，結合 Vue3 可以打造高效能又易維護的網站...",
    },
  ];

  return posts.map((post) => ({
    params: { blog: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<BaseLayout>
  <main
    class="bg-bg min-h-screen font-['Montserrat','sans-serif'] p-4 text-accent"
  >
    <BlogPost client:only="vue" post={post} />
  </main>
</BaseLayout>
